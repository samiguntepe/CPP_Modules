NAME	= PmergeMe
FILES	= main.cpp RPN.cpp
FLAGS	= -Wall -Wextra -Werror -std=c++98
OBJS	= $(FILES:.c=.o)
CC		= c++

RED		= \033[0;31m
GREEN	= \033[0;32m
MAGENTA	= \033[0;35m
CYAN	= \033[0;36m
END		= \033[0m

all : 42 $(NAME)

$(NAME): c $(OBJS)
	@$(CC) $(FLAGS) $(OBJS) -o $(NAME)
	@echo "✅ $(GREEN)SUCCESS!$(END)"
	
%.o: %.c
	@$(CC) $(FLAGS) -c $< -o $@
c:
	@echo "$(MAGENTA)⏳ COMPILING...$(END)\n"

